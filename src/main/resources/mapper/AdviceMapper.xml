<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ipet.mapper.AdviceMapper">

  <resultMap id="BaseResultMap" type="com.ipet.model.Advice">
    <id column="id"  property="id" />
    <result column="userId" property="userId" />
    <result column="content" property="content" />
    <result column="email" property="email" />
    <result column="signDate" property="signDate" />
  </resultMap>

  <select id="getAdviceList" resultMap="BaseResultMap">
		SELECT * FROM t_advice
  </select>

  
  <insert id="addAdvice" parameterType="com.ipet.model.Advice">
	INSERT INTO
		t_advice
		(
		id,
		userId,
		content,
		email,
		signDate
		)
	VALUES
		(
		#{id},
		#{userId},
		#{content},
		#{email},
		#{signDate}
		)
  </insert>

  
  <delete id="delAdvice">
	DELETE FROM
		t_advice
	WHERE
		id=#{id}
  </delete>

</mapper>